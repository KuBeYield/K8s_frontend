FROM node:16 AS build
WORKDIR /front
RUN git clone https://jh-01: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@github.com/KuBeYield/front.git /front
WORKDIR /front
RUN npm install
RUN npm run build
FROM nginx:alpine
COPY --from=build /front/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
